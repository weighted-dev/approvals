{
  "name": "weighted-approvals",
  "private": true,
  "version": "0.0.0",
  "description": "Gerrit/Jenkins-style weighted approvals enforced via a required GitHub Check Run.",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "bundle": "ncc build lib/index.js -o dist --minify",
    "build:all": "npm run build && npm run bundle",
    "build:watch": "tsc -p tsconfig.json -w",
    "test:local": "node dist/index.js",
    "validate:examples": "node scripts/validate-examples.js"
  },
  "dependencies": {
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vercel/ncc": "^0.38.3",
    "typescript": "^5.7.0"
  }
}
